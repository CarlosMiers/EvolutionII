	<queryString>
		<![CDATA[SELECT numero,prestamos.fecha,socio,clientes.nombre,
detalle_prestamo.monto,monedas.etiqueta,monedas.nombre as nombremoneda,
clientes.nombre,clientes.direccion,clientes.telefono,
clientes.ruc,prestamos.plazo,detalle_prestamo.nrocuota,
detalle_prestamo.vence,
DAY(detalle_prestamo.vence) AS vencedia,
CASE MONTH(detalle_prestamo.vence)
  WHEN 1 THEN 'Enero'
  WHEN 2 THEN 'Febrero'
  WHEN 3 THEN 'Marzo'
  WHEN 4 THEN 'Abril'
  WHEN 5 THEN 'Mayo'
  WHEN 6 THEN 'Junio'
  WHEN 7 THEN 'Julio'
  WHEN 8 THEN 'Agosto'
  WHEN 9 THEN 'Setiembre'
  WHEN 10 THEN 'Octubre'
  WHEN 11 THEN 'Noviembre'
  WHEN 12 THEN 'Diciembre'
END AS vencemes
FROM prestamos
INNER JOIN clientes
ON clientes.codigo=prestamos.socio
INNER JOIN monedas
ON monedas.codigo=prestamos.moneda
INNER JOIN detalle_prestamo
ON detalle_prestamo.nprestamo=prestamos.numero
WHERE prestamos.numero=$P{nNumeroPrestamo}
AND detalle_prestamo.nrocuota=$P{nCuota}
ORDER BY detalle_prestamo.nrocuota]]>
	</queryString>
